// factorial using recurtion

#include<stdio.h>
long double fact(long double);
int main()
{
    double f,n;
    printf(" Enter the number :");
    scanf("%lf",&n);
    f=fact(n);
    printf("\n Factorial of number %lf : %lf",n,f);
    return 0;
}
    long double fact(long double x)
    {
        if(x==1) {
        return 1;
        }
        else{
        return (x*fact(x-1)) ;
        }
    }
